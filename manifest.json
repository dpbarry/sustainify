{
  "name": "Sustainify",
  "description": "Shop sustainably",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "toast.js"
      ],
      "run_at": "document_idle"
    }
  ]
}